.nav-bar {
  position: fixed;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar.active {
  background: #fff;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-left: 8px;
  padding-left: 12px;
  width: 240px;
  height: 36px;
  border-radius: 18px;
  background: #fff;
  box-shadow: 0 10px 20px #f0f0f0;
}
.search-bar.active {
  background: #f5f6f7;
  box-shadow: none;
}
.search-icon {
  margin-right: 5px;
  width: 16px;
  height: 16px;
}
.placeholder {
  color: #666;
  font-size: 14px;
}

.container {
  height: 200vh;
}