.nav-bar {
  position: fixed;
  width: 100%;
  background: #fff;
  box-shadow: 0 10px 20px -2px #f0f0f0;
  box-sizing: initial;
  z-index: 100;
}

.search-bar-wrap {
  display: flex;
  align-items: center;
  height: 44px;
}
.back-icon {
  margin-left: 8px;
  width: 20px;
  height: 20px;
}
.search-bar {
  display: flex;
  align-items: center;
  margin-left: 8px;
  padding-left: 12px;
  width: 200px;
  height: 36px;
  border-radius: 18px;
  background: #f5f6f7;
}
.search-icon {
  margin-right: 5px;
  width: 16px;
  height: 16px;
}
.placeholder {
  color: #666;
  font-size: 14px;
}

.search-filter {
  display: flex;
  padding: 0 20px;
  border-top: 1px solid #f8f8f8;
}
.filter-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 44px;
  color: #333;
  font-size: 14px;
}
.filter-item.active {
  font-weight: bold;
}
.filter-icon {
  margin-left: 4px;
  width: 10px;
  height: 10px;
}